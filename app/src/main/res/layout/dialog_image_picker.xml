<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sv_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/ll_message_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80D9D9D9"
                android:orientation="vertical"
                android:padding="0dp">

                <LinearLayout
                    android:id="@+id/ll_message_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_message_background"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_message_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Please choose"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/img_close_button"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@mipmap/ic_close_button"
                        android:scaleType="fitXY"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_action_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chatbot_message_background"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:id="@+id/ll_take_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_marginBottom="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_take_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Take a photo"
                            android:textColor="#517B2C"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_choose_from_library"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_choose_from_library"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose from library"
                            android:textColor="#517B2C"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>