<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">

    <!-- Avatar của Chatbot-->
    <ImageView
        android:id="@+id/img_ai_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="7dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_chatbot"
        android:visibility="gone" />

    <!-- Container của tin nhắn Chatbot -->
    <LinearLayout
        android:id="@+id/ll_msg_container_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_message_background"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="13dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="start"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/tv_msg_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample message"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!-- Container của tin nhắn người dùng -->
    <LinearLayout
        android:id="@+id/ll_msg_container_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatbot_message_background"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="13dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="end"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/tv_msg_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User's message"
            android:textColor="#000000"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/img_msg_user"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_gravity="end" />
    </LinearLayout>

    <!-- Avatar người dùng -->
    <ImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="7dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_user"
        android:visibility="gone" />

</LinearLayout>