<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <!-- Item Cart Container -->
    <LinearLayout
        android:id="@+id/item_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Product Image on the Left -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="102dp"
            android:layout_height="113dp"
            android:layout_gravity="start"
            android:contentDescription="Product Image"
            android:src="@mipmap/img_aboutus1" />

        <!-- Product Details on the Right -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Product Name and Delete Icon in Horizontal Layout -->
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:gravity="start|end"
                android:orientation="horizontal">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="ST25 Rice - Vietnam"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Delete Icon -->
                <ImageButton
                    android:id="@+id/ic_delete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_delete" />
            </LinearLayout>

            <!-- Product Description -->
            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Seed Pack"
                android:textColor="#757575"
                android:textSize="14sp" />

            <!-- Price Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <!-- Price before discount (Yellow Color) -->
                <TextView
                    android:id="@+id/price_before_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VND 200,000"
                    android:textColor="@color/yellow_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Price After Discount and Quantity Control Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <!-- Price after discount -->

                <!-- Quantity Decrease Image (Minus) -->
                <TextView
                    android:id="@+id/price_after_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="VND 180,000"
                    android:textColor="@color/green_secondary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/ic_minus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Decrease Quantity"
                    android:src="@mipmap/ic_minus" />

                <!-- Quantity Display -->
                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <!-- Quantity Increase Image (Plus) -->
                <ImageButton
                    android:id="@+id/ic_plus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Increase Quantity"
                    android:src="@mipmap/ic_plus" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
