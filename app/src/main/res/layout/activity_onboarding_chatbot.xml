<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/r3hymnudssfsft98"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rb4qfvffb4150kfwq"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:background="@drawable/bg_onboarding_box"

                android:paddingBottom="20dp"
                android:layout_marginTop="81dp"
                android:layout_marginBottom="40dp"
                android:layout_marginHorizontal="25dp"
                android:elevation="37dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_onboarding_plant_sell"

                    android:layout_width="match_parent"
                    android:layout_height="338dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_onborading_chatbot" />

                <TextView
                    android:id="@+id/title_onboarding_plant_sell_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/title_onboarding_plant_sell_welcome"
                    android:textColor="#202020"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_onboarding_plant_sell_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_onboarding_plant_sell_descrip"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rhm76uawpgjg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_onboarding_chatbot_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginEnd="84dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_backicon" />

                <ImageButton
                    android:id="@+id/imgbtn_onboarding_chatbot_next"
                    android:layout_width="32dp"
                    android:layout_height="32dp"

                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_next_page" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>