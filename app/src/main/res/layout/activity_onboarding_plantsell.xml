<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/r3hymnudgffgdssfsft98"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rb4qfvfsfssgsfb4150kfwq"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:background="@drawable/bg_onboarding_box"

                android:paddingBottom="20dp"
                android:layout_marginTop="81dp"
                android:layout_marginBottom="40dp"
                android:layout_marginHorizontal="25dp"
                android:elevation="37dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_onboarding_chatbot"

                    android:layout_width="match_parent"
                    android:layout_height="338dp"

                    android:scaleType="fitXY"
                    android:src="@mipmap/img_onborading_shoppingsimple" />

                <TextView
                    android:id="@+id/title_onboarding_plant_chatbot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"

                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="@string/title_onboarding_plant_chatbot"
                    android:textColor="#202020"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_onboarding_chatbot_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_onboarding_chatbot_description"
                    android:textColor="#000000"
                    android:textSize="16sp" />
                <LinearLayout
                    android:id="@+id/rkmcxxxcmlhh9zs"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_background_btn_signup_signin"




                    android:layout_marginHorizontal="48dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/btn_verify_code_reset_password"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"


                        android:background="@android:color/transparent"
                        android:text="@string/btn_onboarding_let_start"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rhm76uawpgjcmcng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_onboarding_plant_sell_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginEnd="84dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_backicon" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>