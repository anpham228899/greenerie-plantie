<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#F0EBEB"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F6F6F6">

        <LinearLayout
            android:id="@+id/ll_chat_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/ll_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:orientation="vertical"
                android:paddingVertical="31dp">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginBottom="31dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/ic_backicon" />

                <LinearLayout
                    android:id="@+id/ll_title_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="29dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="11dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/ic_chatbot" />

                    <LinearLayout
                        android:id="@+id/ll_text_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Plantie"
                            android:textColor="#517B2C"
                            android:textSize="38sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:text="Chat with your AI Chatbot assistant"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- RecyclerView to display messages -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="Chat messages list"
                android:padding="8dp" />

            <!-- Bottom Bar -->
            <LinearLayout
                android:id="@+id/ll_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginBottom="42dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_text_entry_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <EditText
                        android:id="@+id/tv_hint_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_weight="1"
                        android:hint="Type a message..."
                        android:textColor="#95989A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@null"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/img_send_button"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginEnd="9dp"

                    app:srcCompat="@mipmap/ic_sendemail_chatbot" />

                <ImageView
                    android:id="@+id/img_camera_button"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"

                    app:srcCompat="@mipmap/ic_camera_chatbot" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        app:itemIconTint="@color/green_primary"
        app:itemTextColor="@color/green_primary"
        app:itemIconSize="24dp"
        app:labelVisibilityMode="labeled"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>


