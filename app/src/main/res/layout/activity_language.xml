<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/ru8pma40pw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F6F6F6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbtn_language_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_back" />

            <TextView
                android:id="@+id/title_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/title_language"
                android:textColor="#517B2C"
                android:textSize="38sp"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/r1924hwubvk1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bg_onboarding_box"
                android:layout_gravity="center"


                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/r0n8qxq7o0e4p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_language_engsub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="214dp"
                        android:text="@string/text_language_engsub"
                        android:textColor="#517B2C"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:id="@+id/rzob5u1usiy8"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rx1anfr8xfeq"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33292826"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="11dp"
                    android:orientation="vertical">
                </LinearLayout>

                <TextView
                    android:id="@+id/title_language_vietsub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/title_language_vietsub"
                    android:textStyle="bold"
                    android:textColor="#474B51"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>