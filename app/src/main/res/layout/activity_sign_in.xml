<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rxwjg1gzf6sm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rj7fbjwt7wm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ruxv4wave6nl"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="60dp"
                    android:orientation="vertical">
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/r87dzsb5f5j7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rt7y5s9bdpm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingTop="63dp"
                            android:paddingBottom="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_verify_code_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="48dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/title_sign_in_welcome"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/title_verify_code_greenery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="95dp"
                        android:gravity="center"
                        android:text="@string/title_sign_in_greenery"
                        android:textColor="#517B2C"
                        android:textSize="38sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/edt_verify_code_code"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_marginStart="45dp"

                    android:hint="@string/edt_sign_in_input_email"
                    android:textColor="#7D7B7B"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_sign_in_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_marginStart="45dp"
                    android:inputType="textPassword"
                    android:hint="@string/edt_sign_in_password"
                    android:textColor="#7D7B7B"
                    android:textSize="16sp"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/title_reset_password_invalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginBottom="1dp"
                android:text="@string/title_sign_in_invalid"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/rx2fw5q9x6os"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="45dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_remember_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/green_primary"
                    android:text="@string/cb_remember_me"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r9i3w9mr3kmw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="9dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_sign_in_forogt_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="@string/btn_sign_in_forogt_password"
                    android:textColor="#7D7B7B"
                    android:textStyle="italic"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_popup_oke"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_background_btn_signup_signin"



                android:layout_marginBottom="21dp"
                android:layout_marginHorizontal="45dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btn_verify_code_reset_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"


                    android:background="@android:color/transparent"
                    android:text="@string/btn_signin_signin"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>