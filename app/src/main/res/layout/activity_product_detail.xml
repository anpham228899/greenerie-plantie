<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/product_detail_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/product_image_container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<!--            <ImageView-->
<!--                android:id="@+id/product_detail_image"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="365dp"-->
<!--                android:contentDescription="@string/product_image_description"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@mipmap/img_homepage_red_apple" />-->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/product_image_slider"
                android:layout_width="match_parent"
                android:layout_height="365dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="72dp"
                android:paddingBottom="29dp">

                <ImageView
                    android:id="@+id/product_detail_back_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="240dp"
                    android:contentDescription="@string/back_button_description"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_back" />

                <LinearLayout
                    android:id="@+id/image_indicators_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/image_dots_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/dot_indicator_1"
                            android:layout_width="20dp"
                            android:layout_height="6dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/cr100bc4c4c4"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/dot_indicator_2"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/cr100bc4c4c4"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/dot_indicator_3"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/cr100bc4c4c4"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/dot_indicator_4"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/cr100bc4c4c4"
                            android:orientation="vertical" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/product_details_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/product_discount_bubble_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="27dp"
                    android:background="@drawable/bg_discount_bubble"
                    android:orientation="vertical"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="1dp">

                    <TextView
                        android:id="@+id/product_detail_discount_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_detail_discount_placeholder"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_marginBottom="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/product_detail_name_placeholder"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/product_category_tag_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <ImageView
                            android:id="@+id/product_category_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginEnd="4dp"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/product_detail_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/product_detail_category_placeholder"
                            android:textColor="#517B2C"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/product_original_price_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/product_detail_original_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/product_detail_original_price_placeholder"
                            android:textAlignment="textEnd"
                            android:textColor="#FFA500"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/product_detail_current_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/product_detail_current_price_placeholder"
                            android:textColor="#90C447"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_type_tags_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/seed_pack_tag_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/seed_pack_tag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_type_seed_pack"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plant_tree_tag_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/plant_tree_tag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_type_plant_tree"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <Space
                    android:layout_width="64dp"
                    android:layout_height="33dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/product_growth_selling_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="@string/attribute_label_growth_period"
                            android:textColor="#828282"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/product_detail_growth_period"
                            android:layout_width="61dp"
                            android:layout_height="wrap_content"
                            android:text="@string/attribute_value_growth_period_placeholder"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Space
                        android:layout_width="29dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="@string/attribute_label_selling_amount"
                            android:textAlignment="center"
                            android:textColor="#828282"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/product_detail_selling_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/attribute_value_selling_amount_placeholder"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_attributes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="11dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/attribute_level_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            app:srcCompat="@mipmap/ic_difficulty" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="8dp"
                            android:text="@string/attribute_label_level"
                            android:textColor="#828282"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/product_detail_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:gravity="center"
                        android:text="@string/attribute_value_level_placeholder"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attribute_water_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            app:srcCompat="@mipmap/ic_water" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="8dp"
                            android:text="@string/attribute_label_water"
                            android:textColor="#828282"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/product_detail_water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:gravity="center"
                        android:text="@string/attribute_value_water_placeholder"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attribute_conditions_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            app:srcCompat="@mipmap/ic_temp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="@string/attribute_label_special_conditions"
                            android:textAlignment="center"
                            android:textColor="#828282"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/product_detail_special_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:gravity="center"
                        android:text="@string/attribute_value_conditions_placeholder"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_description_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="9dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/section_title_description"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail_description_placeholder"
                    android:textColor="#4F4F4F"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="@string/section_title_feedback"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingTop="4dp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_view_all_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/view_all_feedback"
                android:textColor="@color/green_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingVertical="8dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp">

            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_green_secondary"
                android:text="@string/button_add_to_cart"
                android:textColor="#517B2C" />

            <Button
                android:id="@+id/btn_buy_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_green_primary"
                android:text="@string/button_buy_now"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>