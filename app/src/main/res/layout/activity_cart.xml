<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:padding="16dp">

    <!-- Only one direct child, LinearLayout -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- "Your Cart" Title -->
        <TextView
            android:id="@+id/cart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Your Cart"
            android:textColor="@color/green_primary"
            android:textSize="36sp"
            android:textStyle="bold" />


        <!-- Cart Item Count -->
        <TextView
            android:id="@+id/cart_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have 0 items in your cart"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <!-- Cart Items List (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_cart_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <!-- "Select All" Checkbox -->
            <CheckBox
                android:id="@+id/select_all_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:paddingEnd="8dp"
                android:text="Select all"
                android:textColor="#000"
                android:textSize="16sp" />

            <!-- Vertical layout for Total and its value -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="15dp"
                android:gravity="end|center_vertical">

                <!-- Total Text -->
                <TextView
                    android:id="@+id/total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:layout_marginBottom="4dp"/>

                <!-- Total Value Text (Dynamic) -->
                <TextView
                    android:id="@+id/tv_total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="VND 180,000"
                    android:textColor="@color/green_secondary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Checkout Button on the Right -->
            <Button
                android:id="@+id/checkout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/rounded_background_btn_checkout"
                android:text="Checkout"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>