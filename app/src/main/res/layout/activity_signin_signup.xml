<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rhtkbmzjpalf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_signin_and_signuo"
                android:layout_width="match_parent"
                android:layout_height="391dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:id="@+id/rnxsnp65lue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#FFFFFF"
                android:paddingTop="33dp"
                android:paddingBottom="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_signin_and_signup_greenery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_signin_and_signup_greenery"
                    android:textColor="#517B2C"
                    android:textSize="38sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/title_signin_and_signup_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="53dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="29dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_signin_and_signup_welcome"
                android:textColor="#000000"
                android:textSize="14sp" />
            <LinearLayout
                android:id="@+id/btn_popup_oke"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_background_btn_signup_signin"



                android:layout_marginBottom="21dp"
                android:layout_marginHorizontal="45dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btn_verify_code_reset_password"
                    android:layout_width="300dp"
                    android:layout_height="50dp"

                    android:layout_marginBottom="5dp"


                    android:background="@android:color/transparent"
                    android:text="@string/btn_signin_and_signup_signin"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rkmcmlhh9efdvdv"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:background="@drawable/border_background_signup"



                android:layout_marginBottom="21dp"
                android:layout_marginHorizontal="45dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btn_signin_and_signup_signup"
                    android:layout_width="300dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"


                    android:background="@android:color/transparent"
                    android:text="@string/btn_signin_and_signup_signup"
                    android:textColor="@color/green_primary"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>