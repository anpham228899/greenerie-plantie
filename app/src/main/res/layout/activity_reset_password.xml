<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/rr4i5k4ams"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/r174a7mhi04j"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="148dp"
                android:orientation="vertical"
                android:paddingBottom="102dp">

                <LinearLayout
                    android:id="@+id/rbifu49t4m3m"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="40dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r7zlyrfsvyrf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_sign_up_verify_greenery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_sign_in_greenerie"
                        android:textColor="#517B2C"
                        android:textSize="38sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rn8mpe47sr4h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="49dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_sign_up_verify_description"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_reset_password_let_reset"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>



                <EditText
                    android:id="@+id/edt_reset_password_input_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginBottom="7dp"
                    android:inputType="textPassword"
                    android:hint="@string/edt_reset_password_input_password"
                    android:textColor="#7D7B7B"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_sign_reset_password_confirm_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:inputType="textPassword"
                    android:layout_marginStart="45dp"
                    android:hint="@string/edt_sign_reset_password_confirm_password"
                    android:textColor="#7D7B7B"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/title_reset_password_invalid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginBottom="1dp"
                    android:text="@string/title_reset_password_invalid"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/btn_popup_oke"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="45dp"
                    android:layout_marginTop="20dp"


                    android:layout_marginBottom="21dp"
                    android:background="@drawable/rounded_background_btn_signup_signin"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/btn_sign_up_verify"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"


                        android:layout_marginBottom="5dp"
                        android:background="@android:color/transparent"
                        android:text="@string/btn_reset_password_send_verification_code"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_reset_password_go_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="80dp"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_reset_password_back"
                    android:textColor="#000000"
                    android:textSize="14sp" />




            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>