<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rxwjg1gvxkkvzf6sm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rj7fbjwt7fjgjsswm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ruxv4wfjgdave6nl"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="60dp"
                    android:orientation="vertical">
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/r87dzbbfbsb5f5j7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/rt7ycggb5s9bdpm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:orientation="vertical"
                            android:paddingTop="63dp"
                            android:paddingBottom="4dp">

                            <TextView
                                android:id="@+id/text_verify_code_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="68dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/text_forget_password_description"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/title_verify_code_greenery"
                        android:text="Greenery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="95dp"
                        android:gravity="center"
                        android:textColor="#517B2C"
                        android:textSize="38sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/edt_verify_code_code"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_marginStart="45dp"

                    android:hint="@string/edt_forget_password_email"
                    android:textColor="#7D7B7B"
                    android:textSize="16sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/title_reset_password_invalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginBottom="1dp"
                android:text="@string/title_forget_password_email_invalid"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/rkmcmlhh9Ä‘vdzs"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_background_btn_signup_signin"




                android:layout_marginHorizontal="45dp"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btn_verify_code_reset_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"


                    android:background="@android:color/transparent"
                    android:text="@string/btn_forget_password_send_code"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_verify_code_go_back"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="10dp"


                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_forget_password_go_back"
                android:textColor="#000000"

                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>