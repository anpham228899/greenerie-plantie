<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:padding="16dp">

    <!-- LinearLayout as the single child of ScrollView -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|top"
            android:layout_margin="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="@mipmap/ic_back" />

        <!-- Shipping Address Title -->
        <TextView
            android:id="@+id/tv_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Shipping address"
            android:textColor="@color/green_primary"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Country AutoCompleteTextView -->
        <TextView
            android:id="@+id/tv_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Country"
            android:textColor="#000"
            android:textSize="16sp" />

        <AutoCompleteTextView
            android:id="@+id/actv_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/hint_country"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- City AutoCompleteTextView -->
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="City"
            android:textColor="#000"
            android:textSize="16sp" />

        <AutoCompleteTextView
            android:id="@+id/actv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/hint_city"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- District AutoCompleteTextView -->
        <TextView
            android:id="@+id/tv_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="District"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/hint_district"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Street Input Field -->
        <TextView
            android:id="@+id/tv_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Street"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/hint_street"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Number Input Field -->
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="No."
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/hint_no_street"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_green_secondary"
                android:text="@string/btn_cancel"
                android:textColor="@color/green_secondary" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_green_primary"
                android:text="@string/btn_save" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
