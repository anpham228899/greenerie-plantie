<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6">

    <!-- ScrollView should wrap content for scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/headerImage"
                    android:layout_width="match_parent"
                    android:layout_height="262dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_aboutus1" />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start|top"
                    android:layout_margin="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:padding="8dp"
                    android:src="@mipmap/ic_back" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/rohvpyv4ldlm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/txtAboutUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:paddingBottom="10dp"
                    android:text="@string/title_about_us"
                    android:textColor="@color/green_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAboutUsSub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="@string/title_about_us_sub_1"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/rt9gbe9k86ac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/r2jpqt810q7r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:text="Greenery is your all-in-one plant care assistant. From watering reminders to expert tips, we help you keep your plants thriving and your spaces blooming. Whether you’re a beginner or a botanical pro, we’re here to support your green journey."
                        android:justificationMode="inter_word"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/rmi494hvnrwp"
                        android:layout_width="3dp"
                        android:layout_height="125dp"
                        android:layout_marginEnd="9dp"
                        android:background="@color/yellow_primary"
                        android:orientation="vertical"></LinearLayout>

                    <ImageView
                        android:id="@+id/imgAboutUs2"
                        android:layout_width="139dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/img_aboutus2" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgAboutUs3"
                    android:layout_width="match_parent"
                    android:layout_height="198dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_aboutus3" />

                <LinearLayout
                    android:id="@+id/rbayxuwla8wd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="19dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtAboutUsSub2"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="@string/title_about_us_sub_2"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/r1wp0sx8gsct"
                        android:layout_width="3dp"
                        android:layout_height="125dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/yellow_primary"
                        android:orientation="vertical"></LinearLayout>

                    <TextView
                        android:id="@+id/r0pmp0q9kuwl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Greenery is your all-in-one plant care assistant. From watering reminders to expert tips, we help you keep your plants thriving and your spaces blooming. Whether you’re a beginner or a botanical pro, we’re here to support your green journey."
                        android:justificationMode="inter_word"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/rcdl7yv6jgtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="We’re here to help you grow:\nNurture – Smart tools to care for plants effortlessly\nEducate – Expert-backed guidance for plant lover\nInspire – Eco-friendly habits that benefit the Earth\nConnect – A global of nature-minded growers\nWe’re here to help you grow:\nNurture – Smart tools to care for plants effortlessly\nEducate – Expert-backed guidance for plant lover\nInspire – Eco-friendly habits that benefit the Earth\nConnect – A global of nature-minded growers\nWe’re here to help you grow:\nNurture – Smart tools to care for plants effortlessly\nEducate – Expert-backed guidance for plant lover\nInspire – Eco-friendly habits that benefit the Earth\nConnect – A global of nature-minded growers"
                    android:justificationMode="inter_word"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
